<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PersonalityQuizApp.MainPage">

    <ScrollView>
        <StackLayout>
            <Frame BackgroundColor="LightGray"
                   BorderColor="Black">
                <Label Text="Noah's Personality Quiz"
                   FontSize="Title"
                   TextColor="Black"
                   FontAttributes="Bold"
                   HorizontalTextAlignment="Center"/>
            </Frame>

            <!--Question 1-->
            <Frame BackgroundColor="LightGray"
                   Margin="20"
                   BorderColor="Black"
                   CornerRadius="30">
                <StackLayout x:Name="QuestionBank1"
                             RadioButtonGroup.GroupName="question1"
                             Spacing="5">
                    <Label Text="Question 1"
                           FontSize="Large"
                           FontAttributes="Italic"
                           HorizontalTextAlignment="Center"/>
                    <Label Text="The teacher left the classroom for an emergency trip to the bathroom and hasn't come back yet. What do you do?"
                       TextColor="Black"
                       FontSize="Medium"/>
                    <RadioButton Content="Stay in your seat and behave until the teacher comes back"
                                 Value="s"
                                 CheckedChanged="Question1_CheckChanged"/>
                    <RadioButton Content="Think about why the teacher hasn't come back yet"
                                 Value="t"
                                 CheckedChanged="Question1_CheckChanged"/>
                    <RadioButton Content="Entertain your classmates until the teacher returns"
                                 Value="a"
                                 CheckedChanged="Question1_CheckChanged"/>
                    <RadioButton Content="Catch up with your classmates"
                                 Value="r"
                                 CheckedChanged="Question1_CheckChanged"/>
                </StackLayout>
            </Frame>

            <!--Question 2-->
            <Frame BackgroundColor="LightGray"
                   Margin="20"
                   BorderColor="Black"
                   CornerRadius="30">
                <StackLayout x:Name="QuestionBank2"
                             RadioButtonGroup.GroupName="question2"
                             Spacing="5">
                    <Label Text="Question 2"
                           FontSize="Large"
                           FontAttributes="Italic"
                           HorizontalTextAlignment="Center"/>
                    <Label Text="A friend asks you to critique their code, what do you do and say?"
                       TextColor="Black"
                       FontSize="Medium"/>
                    <RadioButton Content="Analyze it thoroughly and provide honest, straightforward feedback"
                             Value="s"
                                 CheckedChanged="Question2_CheckChanged"/>
                    <RadioButton Content="Provide suggestions for future development and point out possible bugs"
                             Value="t"
                                 CheckedChanged="Question2_CheckChanged"/>
                    <RadioButton Content="Code with them and help improve it"
                             Value="a"
                                 CheckedChanged="Question2_CheckChanged"/>
                    <RadioButton Content="Go through the code and give them some encouragement"
                             Value="r"
                                 CheckedChanged="Question2_CheckChanged"/>
                </StackLayout>
            </Frame>

            <!--Question 3-->
            <Frame BackgroundColor="LightGray"
                   Margin="20"
                   BorderColor="Black"
                   CornerRadius="30">
                <StackLayout x:Name="QuestionBank3"
                             RadioButtonGroup.GroupName="question3"
                             Spacing="5">
                    <Label Text="Question 3"
                           FontSize="Large"
                           FontAttributes="Italic"
                           HorizontalTextAlignment="Center"/>
                    <Label Text="A dragon has been stealing sheep from a village, how would you resolve the situation?"
                       TextColor="Black"
                       FontSize="Medium"/>
                    <RadioButton Content="Look to the authorities and ask for aid to defeat the dragon"
                             Value="s"
                                 CheckedChanged="Question3_CheckChanged"/>
                    <RadioButton Content="Try to come up with a way to trap the dragon"
                             Value="t"
                                 CheckedChanged="Question3_CheckChanged"/>
                    <RadioButton Content="ADVENTURE AWAITS! HUZZAH!"
                             Value="a"
                                 CheckedChanged="Question3_CheckChanged"/>
                    <RadioButton Content="See if the dragon can be reasoned with"
                             Value="r"
                                 CheckedChanged="Question3_CheckChanged"/>
                </StackLayout>
            </Frame>

            <!--Question 4-->
            <Frame BackgroundColor="LightGray"
                   Margin="20"
                   BorderColor="Black"
                   CornerRadius="30">
                <StackLayout x:Name="QuestionBank4"
                             RadioButtonGroup.GroupName="question4"
                         Spacing="5">
                    <Label Text="Question 4"
                           FontSize="Large"
                           FontAttributes="Italic"
                           HorizontalTextAlignment="Center"/>
                    <Label Text="What are rules?"
                       TextColor="Black"
                       FontSize="Medium"/>
                    <RadioButton Content="Something to be followed"
                             Value="s"
                                 CheckedChanged="Question4_CheckChanged"/>
                    <RadioButton Content="Something to be questioned and revised"
                             Value="t"
                                 CheckedChanged="Question4_CheckChanged"/>
                    <RadioButton Content="Suggestions"
                             Value="a"
                                 CheckedChanged="Question4_CheckChanged"/>
                    <RadioButton Content="Something to help everyone"
                             Value="r"
                                 CheckedChanged="Question4_CheckChanged"/>
                </StackLayout>
            </Frame>

            <!--Question 5-->
            <Frame BackgroundColor="LightGray"
                   Margin="20"
                   BorderColor="Black"
                   CornerRadius="30">
                <StackLayout x:Name="QuestionBank5"
                             RadioButtonGroup.GroupName="question5"
                         Spacing="5">
                    <Label Text="Question 5"
                           FontSize="Large"
                           FontAttributes="Italic"
                           HorizontalTextAlignment="Center"/>
                    <Label Text="I love..."
                       TextColor="Black"
                       FontSize="Medium"/>
                    <RadioButton Content="Order, clarity, and stability"
                             Value="s"
                                 CheckedChanged="Question5_CheckChanged"/>
                    <RadioButton Content="Thinking about things and solving problems"
                             Value="t"
                                 CheckedChanged="Question5_CheckChanged"/>
                    <RadioButton Content="Doing fun, daring stuff"
                             Value="a"
                                 CheckedChanged="Question5_CheckChanged"/>
                    <RadioButton Content="Helping people"
                             Value="r"
                                 CheckedChanged="Question5_CheckChanged"/>
                </StackLayout>
            </Frame>

            <!--Question 6-->
            <Frame BackgroundColor="LightGray"
                   Margin="20"
                   BorderColor="Black"
                   CornerRadius="30">
                <StackLayout x:Name="QuestionBank6"
                             RadioButtonGroup.GroupName="question6"
                         Spacing="5">
                    <Label Text="Question 6"
                           FontSize="Large"
                           FontAttributes="Italic"
                           HorizontalTextAlignment="Center"/>
                    <Label Text="I have some free time! Now I can…"
                       TextColor="Black"
                       FontSize="Medium"/>
                    <RadioButton Content="Organize and/or plan some future activities"
                             Value="s"
                                 CheckedChanged="Question6_CheckChanged"/>
                    <RadioButton Content="Learn something new"
                             Value="t"
                                 CheckedChanged="Question6_CheckChanged"/>
                    <RadioButton Content="Go do something adventurous"
                             Value="a"
                                 CheckedChanged="Question6_CheckChanged"/>
                    <RadioButton Content="Do some volunteer work"
                             Value="r"
                                 CheckedChanged="Question6_CheckChanged"/>
                </StackLayout>
            </Frame>

            <Button x:Name="BtnShowResults"
                    Text="Show results!"
                    FontSize="Medium"
                    Margin="20,20,20,20"
                    Padding="10"
                    CornerRadius="30"
                    BorderWidth="3"
                    BorderColor="Black"
                    Clicked="BtnShowResults_Clicked"/>
        </StackLayout>
    </ScrollView>
</ContentPage>
